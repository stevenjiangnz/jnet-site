# Example secrets file for n8n
# Copy this file to secrets.yaml and replace the placeholder values
# DO NOT commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: n8n
type: Opaque
data:
  # Replace these with your base64-encoded values
  # To encode: echo -n "your-password" | base64
  POSTGRES_PASSWORD: REPLACE_WITH_BASE64_ENCODED_PASSWORD
  POSTGRES_USER: bjhu  # This is "n8n" base64 encoded
  POSTGRES_DB: bjhu    # This is "n8n" base64 encoded
---
apiVersion: v1
kind: Secret
metadata:
  name: n8n-encryption-secret
  namespace: n8n
type: Opaque
data:
  # Generate a secure encryption key:
  # openssl rand -base64 32 | base64
  encryption-key: REPLACE_WITH_BASE64_ENCODED_ENCRYPTION_KEY